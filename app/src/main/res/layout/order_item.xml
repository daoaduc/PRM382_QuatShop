<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Order Code and Username -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order Code: 12345"
                android:textColor="#ad168b"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username: johndoe"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Total Money and Payment Method -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/totalMoney"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total: $123.45"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/paymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment: Credit Card"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Order Dates -->
        <TextView
            android:id="@+id/orderDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Date: 01-10-2023"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/confirmedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmed Date: 02-10-2023"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/pickupDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Date: 03-10-2023"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/deliveryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Date: 05-10-2023"
            android:textColor="#444444"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Delivered"
            android:textColor="#ad168b"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="16sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
