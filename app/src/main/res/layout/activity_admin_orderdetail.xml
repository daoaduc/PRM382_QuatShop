<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="50dp"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Order Detail"
        app:titleTextColor="@android:color/black"/>

    <TextView
        android:id="@+id/orderCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Code: #123456"
        android:textSize="16sp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/accountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Name: John Doe"
        android:textSize="16sp"
        android:layout_below="@id/orderCode"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address: 123 Main St, City, Country"
        android:textSize="16sp"
        android:layout_below="@id/accountName"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: +1 (234) 567-890"
        android:textSize="16sp"
        android:layout_below="@id/address"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:textColor="@android:color/black"/>

    <Spinner
        android:id="@+id/statusSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:spinnerMode="dropdown" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusSpinner"
        android:layout_marginTop="13dp"
        android:scrollbars="vertical" />

</RelativeLayout>
